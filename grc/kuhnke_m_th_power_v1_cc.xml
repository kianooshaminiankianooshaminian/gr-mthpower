<?xml version="1.0"?>
<block>
  <name>M-th-power phase recovery</name>
  <key>kuhnke_m_th_power_v1_cc</key>
  <category>[kuhnke]</category>
  <import>import kuhnke</import>
  <make>kuhnke.m_th_power_v1_cc($N, $M, $phase)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Block Size = Vec Length</name>
    <key>N</key>
    <type>int</type>
  </param>
  <param>
    <name>M (As in 'M'-PSK)</name>
    <key>M</key>
    <type>int</type>
  </param>
  <param>
    <name>Constant Phase offset</name>
    <key>phase</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$N</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$N</vlen>
  </source>
</block>
